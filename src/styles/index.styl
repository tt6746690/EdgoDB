@import fonts
@import config


html
  text-size-adjust 100%
  font-smoothing antialiased
  max-width 100%
  overflow-x hidden
  position: relative;
  height: 100%

.container
  padding-left 0
  padding-right 0



body
  margin 0
  text-align center
  color font_color
  background-color bg_color
  // height 100%  // removed so that sidebar scrollspy will work...
  overflow-x hidden
  overflow-y scroll
  position relative


header
  font 14px default-font-family
  color nav_link_color

#bs_overrides > main
  padding-top: 20px
  padding-bottom: 30px
  min-height: 100vh

#bs_overrides > main > h1
  padding-bottom: 20px

#bs_overrides > header > nav
  height header_height
  margin 0
  background-color: nav_bar_bg_color
  border-width 1px
  border-bottom-color nav_bar_bot_border_color

#bs_overrides > footer > div
  position relative
  height footer_height
  margin-top: -footer_height
  background-color: nav_bar_bg_color
  border-width: 1px
  border-top-color: nav_bar_bot_border_color
