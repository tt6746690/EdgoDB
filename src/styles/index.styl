@import fonts
@import colours


html
  text-size-adjust 100%
  font-smoothing antialiased
  max-width 100%
  overflow-x hidden
  position: relative;
  min-height: 100%;

.container
  padding-left 0
  padding-right 0


body
  margin 0
  text-align center
  color font_color
  background-color bg_color
  height 100%
  margin-bottom: 60px;

  header
    font 14px default-font-family
    nav
      div
        border-width 1px
        border-bottom-color nav_bar_bot_border_color
  main
    padding-bottom footer_height


  footer
    .footer
      position: absolute;
      bottom: 0;
      width: 100%;
      /* Set the fixed height of the footer here */
      height: 60px;
      background-color: #f5f5f5;
    div.nav
      border-width 1px
      border-bottom-color nav_bar_bot_border_color
