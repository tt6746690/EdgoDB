//- Navbar mixins
mixin nav(name, id, style)
    - var style = (typeof style === 'undefined') ? "default" : style
    //- for fixed top set .navbar-fixed-top
    nav( role="navigation", class=["navbar", "navbar-" + style, "navbar-static-top"] ) 
        //-default header menu 
        div.container
            .navbar-header
                button.navbar-toggle.collapsed( type="button", data-toggle="collapse", data-target="#" + id, aria-expanded="false", aria-controls="navbar")
                    span.sr-only Toggle navigation
                    span.icon-bar
                    span.icon-bar
                    span.icon-bar
                a.navbar-brand(href="/")= name
     
            .collapse.navbar-collapse.navbar-right( id=id )
                ul.nav.navbar-nav(id="nav_item_bs_overrides", )
                    block

mixin sidebar()
  ul.nav.nav-stacked.bs-docs-sidenav.fixed(id="sidebar")
    block

mixin sub_sidebar()
  ul.nav.nav-stacked(id="fixed")
    block
  
  
mixin nav_item_dropdown(href, active)
  //- a dropdown is a list item 
  li(class=["dropdown", active])
      a.dropdown-toggle( href=href, data-toggle="dropdown", role="button", aria-expanded="false" )= attributes.label
      ul.dropdown-menu( role="menu" )
          block
            
mixin nav_divider
    li.divider
 
mixin nav_header
    li.dropdown-header
        block        
mixin nav_item(href, active)
    li(class=active): a( href=href )
        block
                  
